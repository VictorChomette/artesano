<div class="banner px-5 text-white">
  <h2><%= @service.title %></h2>
  <h4><%= @service.specialty %></h4>
  <% if @service.user == current_user %>
    <%= link_to "Edit service", edit_service_path(@service), class:"btn btn-primary text-white" %>
    <%= link_to service_path(@service), method: :delete do %>
      <i class="fas fa-trash"></i>
    <% end %>
  <% end %>
</div>
<div class="container mt-3">
  <h3>Description:</h3>
  <p> <%= @service.presentation %> </p>
  <%= link_to "Create new intervention", new_intervention_path(@service), class:"btn btn-primary text-white" %>
</div>
<div style="width: 100%; height: 600px;"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
